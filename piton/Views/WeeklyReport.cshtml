 @{
    ViewData["Title"] = "Weekly Report";
}
@model piton.Models.Task

<h1>Weekly Report</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Is Completed</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>@(task.IsCompleted ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>
